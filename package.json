{
  "name": "fastshow",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "src/electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:chat": "npm-run-all --parallel dev:react dev:server",
    "dev:server": "node server/start.js",
    "server": "node server/start.js",
    "test:server": "node test/test-server.js",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "antd": "^5.27.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "electron-store": "^10.1.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "minio": "^8.0.6",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.example.fastShow",
    "productName": "fastShow",
    "files": [
      "dist/**/*",
      "src/electron/main.js",
      "src/electron/preload.js",
      "index.html",
      "package.json",
      "config.json"
    ],
    "asarUnpack": [
      "**/icudtl.dat"
    ],
    "directories": {
      "output": "release"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "uninstallDisplayName": "fastShow Uninstaller",
      "license": "LICENSE.txt",
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
